<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />
	<#if .locale == "zh_CN">
		<link name="NotoSansCJKsc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKsc_Regular}" src-bold="${nsfont.NotoSansCJKsc_Bold}" bytes="2" />
	<#elseif .locale == "zh_TW">
		<link name="NotoSansCJKtc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKtc_Regular}" src-bold="${nsfont.NotoSansCJKtc_Bold}" bytes="2" />
	<#elseif .locale == "ja_JP">
		<link name="NotoSansCJKjp" type="font" subtype="opentype" src="${nsfont.NotoSansCJKjp_Regular}" src-bold="${nsfont.NotoSansCJKjp_Bold}" bytes="2" />
	<#elseif .locale == "ko_KR">
		<link name="NotoSansCJKkr" type="font" subtype="opentype" src="${nsfont.NotoSansCJKkr_Regular}" src-bold="${nsfont.NotoSansCJKkr_Bold}" bytes="2" />
	<#elseif .locale == "th_TH">
		<link name="NotoSansThai" type="font" subtype="opentype" src="${nsfont.NotoSansThai_Regular}" src-bold="${nsfont.NotoSansThai_Bold}" bytes="2" />
	</#if>

    <macrolist>
      <macro id='footer'>
	  <table class="content">
		<tr>
		<td class="column-content" colspan='4'></td>
		</tr>
		<tr>
		<td class="column-content" style='heigth:50px;padding-top: 20px' colspan='2'> </td>
		<td class="column-content" style='heigth:50px;padding-top: 20px' colspan='1'></td>
		<td class="column-content" style='heigth:50px;padding-top: 70px;align:center' colspan='1'>(..................................)<br/>GENERAL MANAGER</td>
		</tr>
	</table>
      </macro>
    </macrolist>

    <style type="text/css">* {
						<#if .locale == "zh_CN">
							font-family: NotoSans, NotoSansCJKsc, sans-serif;
						<#elseif .locale == "zh_TW">
							font-family: NotoSans, NotoSansCJKtc, sans-serif;
						<#elseif .locale == "ja_JP">
							font-family: NotoSans, NotoSansCJKjp, sans-serif;
						<#elseif .locale == "ko_KR">
							font-family: NotoSans, NotoSansCJKkr, sans-serif;
						<#elseif .locale == "th_TH">
							font-family: NotoSans, NotoSansThai, sans-serif;
						<#else>
							font-family: NotoSans, sans-serif;
						</#if>
					}
					td p { align:left }
					td img { align:left }

      .content{
        margin-top: 1px;
		width: 100%;
		table-layout: fixed;
      }
      .row_border{
        border-bottom:1px;
		        width: 25%;
      }
      thead{
        border-bottom:1px;
		        width: 25%;
        <!-- border-top:1px; -->
      }
      h3{
        font-style: none;
      }
      .title-header{
        font-size: 12px;
		        width: 25%;
		font-family: Segoe UI;
      }
      .text-header{
        font-size: 12px;
        width: 25%;
		font-family: Segoe UI;
      }
      .column-head{
        font-size: 12px;
        font-weight: bold;
        width: 25%;
		text-align:center;
		font-family: Segoe UI;
      }
      .column-content{
        font-size: 12px;
        width: 25%;
		font-family: Segoe UI;
      }
      .padding-left-3{
       	padding-left: 25px;
	  }
      .column-content-header{
		font-size: 5px
       	width: 25%;
		font-family: Segoe UI;
	  }
</style>

</head>

<body padding="0.3in 0.5in 0.3in 0.5in" size="Letter" footer='footer' footer-height='200px'>

    <table class="content">
	
<thead>
	<tr>
      <td style='padding-bottom: 13px; padding-top: 60px;width: 25%;'> </td>
      <td style='width:80%;padding-top:10px;font-weight: bold;text-align:left;' colspan='3'> </td>
      <!-- <td style='border:1px solid black;width:20%;' ></td> -->
    </tr>
    <tr >
      <td class="column-content-header" style='border-right:1px;border-top:1px;border-bottom:1px;font-size: 12px;padding-top:15px;padding-bottom:15px;'><b> Office & Factory<br/>Daan Mogot Km 16<br/>Jakarta Barat<br/> Phone: 6190128<br/>fax: 6190135</b> </td>
      <td class="column-content-header" style='border-right:1px;border-top:1px;border-bottom:1px;padding-top:15px;padding-bottom:15px;' colspan= '2' > <p style='font-size:14px; align: center;font-weight:bold;'>INVOICE</p><br/><p style='font-size:12px; align: left;font-weight:bold;'><span style='text-align:left;font-weight:bold;'>No.: ${Record.data.tran_id}</span> <span style='color:white'>_______________!</span><span style='font-size:12px;align: right;padding-right:20px;font-weight:bold;'> Date: ${Record.data.tran_date}</span></p> </td>
      <td class="column-content-header" style='border-top:1px;border-bottom:1px;font-size: 12px;padding-top:15px;padding-bottom:15px;'><b>Distributor: <br/>PT. SETIA SAPTA, Jl Gajah Mada 184 Atas JAKARTA <br/>Phone : 6296206 Fax : 6297861</b></td>
    </tr>
    <tr >
      <td class="column-content-header" style = 'font-size: 12px;'> ${Record.data.line_address} </td>
      <td class="column-content-header" style = 'font-size: 12px;' colspan='2'> Purchase Order Number: ${Record.data.po_number} </td>
      <td class="column-content-header" style = 'font-size: 12px;'> Date: ${Record.data.po_date} </td>
    </tr>
    <tr >
      <td class="column-content-header" style = 'font-size: 12px;'></td>
      <td class="column-content-header" style = 'font-size: 12px;' colspan='2'> Delivery Order Number:<br/><#list Record.data.do_and_date as data> <span style = 'text-align: left;'> ${data.do}</span> <span style = 'text-align: right;'> ${data.date}</span></#list> </td>
      <td class="column-content-header" style = 'font-size: 12px;'></td>
    </tr>
    <tr class = "row_border">
      <td class="column-content-header" style = 'font-size: 12px;'></td>
      <td class="column-content-header" style = 'font-size: 12px;' colspan='2'> </td>
      <td class="column-content-header" style = 'font-size: 12px;'></td>
    </tr>
	<!-- <tr>
	<td align = "left" colspan = "5" style="width: 19px; height: 20px; font-family: NotoSans, NotoSansThai, sans-serif; font-size: 6pt; border-bottom: 1px">Print: ${.now?date?string['dd MMMM YYYY']},${.now?time?string['HH:mm:ss']}</td>  
	<td align = "right" colspan = "23" style="width: 19px; height: 20px; font-family: sans-serif; font-size: 7pt; border-bottom: 1px"><strong><pagenumber/> of <totalpages/></strong></td>
	</tr> -->
	<tr>
	<td class="column-head" style='align:center; border-right:1px;' rowspan='2'>Description of Goods</td>
	<td class="column-head" style='align:center;border-right:1px;' rowspan='2'>Quantity</td>
	<td class="column-head" style='align:center; border-bottom:1px;' colspan='2'><text>Harga/Price</text></td>
	</tr>
	<tr>
	<td class="column-head" style='align:center;border-right:1px;'>Unit/Satuan</td>
	<td class="column-head" style='align:center;'>Jumlah/Total</td>
	</tr>
</thead>

<#list Record.data.line as data>
	<tr>
	<td class="column-content" style='align:center;border-right:1px;'>${data.item_name}<br/>${data.item_memo}</td>
	<td class="column-content" style='align:center;border-right:1px;'>${data.quantity}</td>
	<td class="column-content" style='align:center;border-right:1px;'>${data.currency} ${data.unit_price}</td>
	<td class="column-content" style='align:center;'>${data.currency} ${data.amount}</td>
	</tr>
	
</#list>

    <tr>
	<td class="column-content" style='align:center;border-top:1px;border-right:1px;'></td>
	<td class="column-content" style='align:center;border-top:1px;border-right:1px;'></td>
	<td class="column-content" style='align:center;border-top:1px;border-right:1px;'>Sub Total</td>
	<td class="column-content" style='align:center;border-top:1px;'>${Record.data.total_net_amount}</td>
	</tr>
    <tr>
	<td class="column-content" style='align:center;border-right:1px;'></td>
	<td class="column-content" style='align:center;border-right:1px;'></td>
	<td class="column-content" style='align:center;border-right:1px;'>PPN</td>
	<td class="column-content" style='align:center;'>${Record.data.tax_amt}</td>
	</tr>
    <tr>
	<td class="column-content" style='align:center;border-right:1px;'></td>
	<td class="column-content" style='align:center;border-right:1px;'></td>
	<td class="column-content" style='align:center;border-right:1px;'>Jumlah/Total</td>
	<td class="column-content" style='align:center;'>${Record.data.total_amount}</td>
	</tr>
	<tr>
	<td class="column-content" colspan='1' style='border-top:1px;'><br/> ${Record.data.remarks}</td>
	<td class="column-content" colspan='3' style='color:white;border-top:1px;'>test</td>
	</tr>
	<tr>
	<td class="column-content" colspan='4'>Terbilang: <a><b>${Record.data.terbilang}</b></a></td>
	</tr>
	<tr>
	<td class="column-content" style='heigth:50px;padding-top: 20px' colspan='2'>Tgl. Jatuh Tempo: ${Record.data.due_date} </td>
	<td class="column-content" style='heigth:50px;padding-top: 20px' colspan='1'>OFF SET 14 HARI<br/>${Record.data.bank_invoice}<br/>${Record.data.bank_invoice_address} </td>
	<td class="column-content" style='heigth:50px;padding-top: 70px;align:center' colspan='1'></td>
	</tr>

</table>

</body>
</pdf>