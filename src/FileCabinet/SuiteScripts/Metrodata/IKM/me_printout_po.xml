                table-layout: fixed;
            }
            th {
                font-weight: bold;
                font-size: 8pt;
                vertical-align: middle;
                color: #333333;
            }
            td p { align:left }
            
            table.header td {
                padding: 0px;
                font-size: 8px;
            }
            table.header_border {
                padding: 0px;
                vertical-align: top;
            }
            table.header tr:last-child{
                page-break-after: auto;
            }

            table.content th {
                border-top: 1px solid;
                border-bottom: 1px solid;
                border-left: 1px solid;
                padding: 1px
            }
            <!-- table.content th:first-child {
                border-left: none;
            } -->
